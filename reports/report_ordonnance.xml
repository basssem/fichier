<?xml version="1.0" encoding="utf-8"?>
<odoo>


<template id="report_ordonnance">

    <t t-call="web.html_container">

        <t t-foreach="docs" t-as="doc">
             <t t-call="web.external_layout_boxed" >
<h1 class="text-center">Patient :
<t t-esc="doc.fiche_id.name" /><br></br>
</h1>
<h1><br></br>
            <tr t-foreach='doc.ordonnanceligne_consultation_id.ordonnance_ordonnanceligne_id' t-as='line'>
                 <td><span t-esc="line.medicament_ordonnance_id.nom"/><![CDATA[&nbsp;]]></td>
                 <td><span t-esc="line.dosage"/>/jour<![CDATA[&nbsp;]]></td>
                 <td><span t-esc="line.duree"/> jours</td><br></br>
            </tr><br></br>
</h1>
             </t>
       </t>
        </t>
</template>
</odoo>
